<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompanyApp</title>

    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="container">

        <header class="bg-gradient-to-r from-blue-500 to-blue-600 text-white p-6 rounded-xl shadow-md mb-8">
            <nav class="flex flex-col sm:flex-row justify-between items-center">
                <div class="text-3xl font-bold tracking-tight mb-4 sm:mb-0">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">CompanyApp</a>
                </div>
                <ul class="flex flex-wrap justify-center sm:justify-end space-x-0 sm:space-x-6 text-lg">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                    <li><a asp-area="" asp-controller="Personnel" asp-action="Index" class="nav-link">Personnel</a></li>
                    <li><a asp-area="" asp-controller="PayrollReport" asp-action="Index" class="nav-link">Payroll</a></li>
                </ul>
            </nav>
        </header>


        <main role="main">
            @RenderBody()
        </main>


        <footer class="mt-12 text-center text-gray-600 text-sm py-4 border-t border-gray-200">
            <p>&copy; 2025 CompanyApp. All rights reserved.</p>
        </footer>
    </div>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
