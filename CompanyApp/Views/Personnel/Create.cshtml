@model CompanyApp.ViewModels.EmployeeCreateViewModel

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold mb-6">Create New Employee</h2>

    <form asp-action="Create" method="post">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <div>
                <label asp-for="FirstName" class="block font-medium mb-1"></label>
                <input asp-for="FirstName" class="w-full border rounded p-2" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="LastName" class="block font-medium mb-1"></label>
                <input asp-for="LastName" class="w-full border rounded p-2" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="MiddleName" class="block font-medium mb-1"></label>
                <input asp-for="MiddleName" class="w-full border rounded p-2" />
            </div>
            <div>
                <label asp-for="PhoneNumber" class="block font-medium mb-1"></label>
                <input asp-for="PhoneNumber" class="w-full border rounded p-2" />
                <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="DateOfBirth" class="block font-medium mb-1"></label>
                <input asp-for="DateOfBirth" type="date" class="w-full border rounded p-2" />
                <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="HireDate" class="block font-medium mb-1"></label>
                <input asp-for="HireDate" type="date" class="w-full border rounded p-2" />
                <span asp-validation-for="HireDate" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="Salary" class="block font-medium mb-1"></label>
                <input asp-for="Salary" type="number" step="0.01" class="w-full border rounded p-2" />
                <span asp-validation-for="Salary" class="text-red-500 text-sm"></span>
            </div>

            <div class="col-span-1 md:col-span-2 border-t pt-6 mt-6">
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="NewAddress.Street" class="block font-medium mb-1"></label>
                        <input asp-for="NewAddress.Street" class="w-full border rounded p-2" />
                        <span asp-validation-for="NewAddress.Street" class="text-red-500 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="NewAddress.BuildingNumber" class="block font-medium mb-1"></label>
                        <input asp-for="NewAddress.BuildingNumber" class="w-full border rounded p-2" />
                        <span asp-validation-for="NewAddress.BuildingNumber" class="text-red-500 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="NewAddress.ApartmentNumber" class="block font-medium mb-1"></label>
                        <input asp-for="NewAddress.ApartmentNumber" class="w-full border rounded p-2" />
                        <span asp-validation-for="NewAddress.ApartmentNumber" class="text-red-500 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="NewAddress.CityId" class="block font-medium mb-1"></label>
                        <select asp-for="NewAddress.CityId" asp-items="Model.Cities" class="w-full border rounded p-2">
                            <option value=""> Select City </option>
                        </select>
                        <span asp-validation-for="NewAddress.CityId" class="text-red-500 text-sm"></span>
                    </div>
                </div>
               
            </div>

            <div>
                <label asp-for="DepartmentId" class="block font-medium mb-1"></label>
                <select asp-for="DepartmentId" asp-items="Model.Departments" class="w-full border rounded p-2"></select>
                <span asp-validation-for="DepartmentId" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="PositionId" class="block font-medium mb-1"></label>
                <select asp-for="PositionId" asp-items="Model.Positions" class="w-full border rounded p-2"></select>
                <span asp-validation-for="PositionId" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="mt-6">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Create</button>
            <a asp-action="Index" class="ml-4 text-gray-700 hover:underline">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }